extend int {
    fn abs(self) -> int {
        if self < 0 {
            -self
        } else {
            self
        }
    }
}

extend float {
    fn abs(self) -> float {
        if self < 0.0 {
            -self
        } else {
            self
        }
    }
}

fn max(n1: T Ord, n2: T) -> T {
    if n1 > n2 {
        n1
    } else {
        n2
    }
}